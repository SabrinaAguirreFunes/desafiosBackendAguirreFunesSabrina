<div class="container"><h1 style="margin-top: 60px">Gestion de productos</h1>

  <form class="container m-3" id="formNewProd">
    <h2>Ingresar un nuevo producto</h2>
    <div class="row mb-3">
      <label for="title" class="col-sm-2 col-form-label">Titulo</label>
      <div class="col-sm-10">
        <input type="text" required class="form-control" name="title" />
      </div>
    </div>
    <div class="row mb-3">
      <label
        for="description"
        class="col-sm-2 col-form-label"
      >Descripción</label>
      <div class="col-sm-10">
        <input type="text" required class="form-control" name="description" />
      </div>
    </div>
    <div class="row mb-3">
      <label for="code" class="col-sm-2 col-form-label">Código del producto</label>
      <div class="col-sm-10">
        <input type="text" required class="form-control" name="code" />
      </div>
    </div>
    <div class="row mb-3">
      <label for="price" class="col-sm-2 col-form-label">Precio</label>
      <div class="col-sm-10">
        <input type="number" required class="form-control" name="price" />
      </div>
    </div>
    <div class="row mb-3">
      <label for="stock" class="col-sm-2 col-form-label">Stock</label>
      <div class="col-sm-10">
        <input type="number" required class="form-control" name="stock" />
      </div>
    </div>
    <div class="row mb-3">
      <label for="category" class="col-sm-2 col-form-label">Categoría</label>
      <div class="col-sm-10">
        <input type="text" required class="form-control" name="category" />
      </div>
    </div>
    <div class="row mb-3">
      <label for="thumbnail" class="col-sm-2 col-form-label">Imagen</label>
      <div class="col-sm-10">
        <input type="text" required class="form-control" name="thumbnail" />
      </div>
    </div>

    <button type="submit" class="btn btn-primary" id="btnNewProd">Agregar
      producto</button>
  </form>

  <form class="container m-3" id="formDeleteProd">
    <h2>Eliminar producto</h2>
    <div class="row mb-3">
      <label for="idDelete" class="col-sm-2 col-form-label">Id del item a
        eliminar</label>
      <div class="col-sm-10">
        <input type="number" required class="form-control" name="idDelete" />
      </div>
    </div>

    <button type="submit" class="btn btn-primary" id="btnDeleteProd">Eliminar
      producto</button>
  </form>

  <div class="container" id="showProds">
    <div id="listProds"></div>
  </div>
</div>